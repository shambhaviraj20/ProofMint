import React, { useState, useEffect } from 'react';
import { useAuthStore } from './store/authStore';
import { useIdeaStore } from './store/ideaStore';

// Import components from the components folder
import Navigation from './components/Navigation';
import IdeaSubmission from './components/IdeaSubmission';
import UserIdeas from './components/UserIdeas';
import PublicFeed from './components/PublicFeed';
import ProofGenerator from './components/ProofGenerator';
import ProofMintLogo from './pmlogo.png';

function App() {
  const { actor, initialize, principal, loading } = useAuthStore();
  const { loadStats } = useIdeaStore();
  const [activeTab, setActiveTab] = useState('submit');

  // Initialize actor on mount
  useEffect(() => {
    initialize();
  }, []);

  // Load stats when actor is ready
  useEffect(() => {
    if (actor) {
      loadStats(actor);
    }
  }, [actor, loadStats]);

  // Show loading screen while connecting
  if (loading || !actor) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-50 flex items-center justify-center">
        <div className="text-center">
          <div className="animate-spin rounded-full h-16 w-16 border-b-4 border-indigo-600 mx-auto mb-4"></div>
          <p className="text-gray-700 text-lg font-medium">Connecting to blockchain...</p>
          <p className="text-gray-500 text-sm mt-2">Initializing Internet Computer canister</p>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50">
      {/* Header */}
      <header className="bg-white/80 backdrop-blur-md shadow-sm border-b border-indigo-100 sticky top-0 z-50">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
          <div className="flex justify-between items-center">
            <div className="flex items-center space-x-3">
              <img src={ProofMintLogo} alt="ProofMint" className="h-10 w-10" />
              <div>
                <h1 className="text-2xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
                  ProofMint
                </h1>
                <p className="text-xs text-gray-500">Decentralized IP Protection</p>
              </div>
            </div>
            <div className="flex items-center space-x-4">
              <div className="text-right">
                <p className="text-xs text-gray-500">Anonymous Mode</p>
                <p className="text-xs text-gray-600 font-mono">
                  {principal.toText().slice(0, 12)}...
                </p>
              </div>
            </div>
          </div>
        </div>
      </header>

      {/* Navigation */}
      <Navigation activeTab={activeTab} setActiveTab={setActiveTab} />

      {/* Main Content */}
      <main className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {activeTab === 'submit' && <IdeaSubmission />}
        {activeTab === 'my-ideas' && <UserIdeas />}
        {activeTab === 'feed' && <PublicFeed />}
        {activeTab === 'proof' && <ProofGenerator />}
      </main>

      {/* Footer */}
      <footer className="bg-white/50 backdrop-blur-sm border-t border-gray-200 mt-12">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
          <p className="text-center text-sm text-gray-600">
            Powered by Internet Computer â€¢ Secured with Blockchain Technology
          </p>
        </div>
      </footer>
    </div>
  );
}

export default App;
